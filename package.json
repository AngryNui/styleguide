{
  "name": "styleguide",
  "version": "0.0.1",
  "description": "sample project that may serve as module library and styleguide",
  "license": "MIT",
  "author": "Christopher Voigt <chlorophyllkid@gmail.com>",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/chlorophyllkid/styleguide.git"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "npm run clean && npm run build:dist && npm run build:app",
    "build:app": "npm run build:app:html",
    "build:app:html": "node tasks/html.build.js",
    "build:dist": "npm run build:dist:css && npm run build:dist:js",
    "build:dist:css": "node tasks/css.build.js",
    "build:dist:js": "node tasks/javascript.build.js",
    "test": "npm run test:css && npm run test:js && npm run test:markdown",
    "test:css": "stylelint -q ./src/**/*.scss",
    "test:js": "eslint --quiet ./src/**/*.js ./tasks/**/*.build.js",
    "test:markdown": "remark -q . ./src/**/*.md",
    "clean": "rm -rf dist/ && rm -rf app/",
    "start": "npm run build && npm run watch",
    "watch": "node tasks/watch.js",
    "preversion": "npm test",
    "version": "cross-env NODE_ENV=production npm run build && git add dist/*",
    "dist-patch": "npm version patch -m \"Upgrade assets to %s\"",
    "dist-minor": "npm version minor -m \"Upgrade assets to %s\"",
    "dist-major": "npm version major -m \"Upgrade assets to %s\""
  },
  "devDependencies": {
    "browser-sync": "2.19.0",
    "cattleman": "^2.0.2",
    "cross-env": "^5.1.3",
    "eslint": "4.14.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "jstransformer-markdown-it": "2.0.0",
    "node-sass": "4.7.2",
    "node-sass-tilde-importer": "^1.0.0",
    "node-watch": "0.5.5",
    "pug": "2.0.0-rc.4",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "rollup": "^0.49.2",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "shelljs": "0.7.8",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "uglify-es": "3.3.0"
  },
  "dependencies": {
    "cookieconsent": "^3.0.4",
    "highlightjs": "9.10.0",
    "jquery": "^3.2.1",
    "normalize.css": "7.0.0"
  }
}
