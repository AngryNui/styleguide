{
  "name": "ds-example",
  "version": "0.1.0",
  "description": "sample project that may serve as module library and styleguide",
  "license": "MIT",
  "author": "Christopher Voigt <chlorophyllkid@gmail.com>",
  "scripts": {
    "build": "npm run clean && npm run build:dist && npm run build:app",
    "build:app": "npm run build:app:html",
    "build:app:html": "node tasks/html.build.js",
    "build:dist": "npm run build:dist:css && npm run build:dist:js",
    "build:dist:css": "node tasks/css.build.js",
    "build:dist:js": "node tasks/javascript.build.js",
    "test": "npm run test:css && npm run test:js && npm run test:markdown",
    "test:css": "stylelint ./src/**/*.scss",
    "test:js": "eslint ./src/**/*.js ./tasks/**/*.build.js",
    "test:markdown": "remark -q . ./src/**/*.md",
    "clean": "rm -rf dist/ && rm -rf app/",
    "start": "npm run build && npm run watch",
    "watch": "node tasks/watch.js"
  },
  "devDependencies": {
    "browser-sync": "2.19.0",
    "cattleman": "^2.0.2",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jstransformer-markdown-it": "2.0.0",
    "node-sass": "^4.5.3",
    "node-sass-tilde-importer": "^1.0.0",
    "node-watch": "0.5.5",
    "normalize.css": "^7.0.0",
    "pug": "2.0.0-rc.4",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "rollup": "^0.49.2",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "shelljs": "0.7.8",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "uglify-es": "^3.0.28"
  },
  "dependencies": {
    "cookieconsent": "^3.0.4",
    "highlightjs": "9.10.0",
    "jquery": "^3.2.1"
  }
}
