{
  "name": "ds-example",
  "version": "0.1.0",
  "description": "sample project that may serve as module library and styleguide",
  "license": "MIT",
  "author": "Christopher Voigt <chlorophyllkid@gmail.com>",
  "scripts": {
    "build": "npm run build:dist && npm run build:app",
    "build:dist": "npm run build:dist:js && npm run build:dist:css",
    "build:dist:js": "NODE_ENV=production node tasks/javascript.build.js",
    "build:dist:css": "NODE_ENV=production node tasks/css.build.js",
    "build:app": "npm run build:app:html",
    "build:app:html": "node tasks/html.build.js",
    "test": "npm run test:lint",
    "test:lint": "npm run test:lint:js && npm run test:lint:css",
    "test:lint:js": "eslint ./src/**/*.js ./tasks/**/*.build.js",
    "test:lint:css": "stylelint ./src/**/*.scss",
    "test:lint:markdown": "remark . ./src/**/*.md"
  },
  "devDependencies": {
    "cattleman": "^2.0.2",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jstransformer-markdown-it": "2.0.0",
    "highlightjs": "^9.10.0",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "pug": "2.0.0-rc.4",
    "rollup": "^0.49.2",
    "rollup-plugin-uglify": "^2.0.1",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "uglify-es": "^3.0.28"
  },
  "dependencies": {
    "jquery": "^3.2.1"
  }
}
